{
    "manifest_version": 2,
    "name": "View Source Switch",
    "description": "One-click switch between web page and view-source",
    "version": "2.0.0",
    "author": "Florent Tassy",
    "homepage_url": "https://github.com/ftassy/ViewSourceSwitch",
    "applications": {
        "gecko": {
            "id": "view-source-switch@ftassy.github.io"
        }
    },
    "permissions": [
        "activeTab",
        "storage"
    ],
    "browser_action": {
        "default_title": "View Source Switch",
        "default_icon": "icons/icon.svg"
    },
    "icons": {
        "48": "icons/icon.svg",
        "96": "icons/icon.svg"
    },
    "options_ui": {
        "page": "options.html",
        "browser_style": true
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "scripts/content.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "scripts/background.js"
        ]
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+U"
            },
            "description": "Switch web view - source view"
        }
    }
}